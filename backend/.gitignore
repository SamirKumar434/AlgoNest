**/node_modules/

# Lock files
package-lock.json
yarn.lock

# Environment variables
.env
.env.local

# Build outputs
dist/
build/
out/

# IDE files
.vscode/
.idea/

# OS files
.DS_Store
Thumbs.db

# Logs
npm-debug.log*

